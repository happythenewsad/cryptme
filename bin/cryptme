#!/usr/bin/env ruby

require 'cryptme'

# bootstrap parser ###
usage = "Usage: cryptme <path> \n If the given path is not a cryptme file, a new one will be created."
if ARGV.length != 1
  puts usage 
  exit 
end
######################


cryptme = Cryptme::Utils.new(path: ARGV.first)
cryptme.persist

Cryptme::REPLParser.cryptme = cryptme

puts Cryptme::REPLParser.usage

loop do 
  putc '>'
  inp = $stdin.gets.chomp
  options = Cryptme::REPLParser.parse inp.split(' ')
end
